<?xml version="1.0"?>
<odoo>

  <!--Action-->
  <record id="invoice_action" model="ir.actions.act_window">
    <field name="name">Invoices</field>
    <field name="res_model">flexwheels.invoice</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
            No record found. Let's create one!
          </p>
    </field>
  </record>

    <!--List View-->
  <record id="invoice_model_view_tree" model="ir.ui.view">
    <field name="name">flexwheels.invoice.tree</field>
    <field name="model">flexwheels.invoice</field>
    <field name="arch" type="xml">
      <tree string="Channel">
        <field name="customer" string="Customer"/>
        <field name="car" string="Car"/>
        <field name="period_of_service" string="Period of Service"/>
        <field name="amount" string="Amount"/>
      </tree>
    </field>
  </record>

    <!-- Form View-->
  <record id="invoice_model_form" model="ir.ui.view">
    <field name="name">flexwheels.invoice.form</field>
    <field name="model">flexwheels.invoice</field>
    <field name="arch" type="xml">
      <form string="Invoice form">
        <sheet>
          <group>
            <h1>
              <field name="invoice_number"></field>
            </h1>
            <group colspan="2">
              <group cols="1">
                <field name="customer"/>
                <field name="car"/>
              </group>
              <group cols="2">
                <field name="period_of_service"/>
                <field name="amount"/>
              </group>
            </group>
          </group>
        </sheet>
        
        <!-- chatter -->
        <div class="oe_chatter">
          <field name="activity_ids"/>
          <field name="activity_state"/>
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>
</odoo>
